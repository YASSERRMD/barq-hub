# BARQ HUB Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Service Ports (Different from SYNAPSE to allow parallel deployment)
# =============================================================================
FRONTEND_PORT=4001
BACKEND_PORT=4000
POSTGRES_PORT=5433
REDIS_PORT=6380
QDRANT_PORT=6335

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:4000/v1
NEXT_PUBLIC_WS_URL=ws://localhost:4000
NEXT_PUBLIC_APP_NAME=BARQ HUB

# =============================================================================
# Backend Configuration
# =============================================================================
BARQ__SERVER__HOST=0.0.0.0
BARQ__SERVER__PORT=4000

# Database
DATABASE_URL=postgresql://barqhub:barqhub_password@localhost:5433/barqhub

# Redis
REDIS_URL=redis://localhost:6380

# Vector Database
QDRANT_URL=http://localhost:6335

# =============================================================================
# LLM Provider API Keys
# =============================================================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
MISTRAL_API_KEY=
GROQ_API_KEY=
TOGETHER_API_KEY=
COHERE_API_KEY=

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# AWS Bedrock
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# =============================================================================
# Embedding Provider API Keys
# =============================================================================
